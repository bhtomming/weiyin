{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <h2 class="list-group-flush text-center w-100">我的订单</h2>
            <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                <tr>
                    <th scope="col">订单号</th>
                    <th scope="col">金额</th>
                    <th scope="col">状态</th>
                    <th scope="col">时间</th>
                </tr>
                </thead>
                <tbody>
                {% for trade in trades %}
                <tr>
                    <th scope="row"><a href="{{ path('view_trade',{'id': trade.id}) }}" >{{ trade.tradeNo }}</a></th>
                    <td>{{ trade.totalAmount }}元</td>
                    <td>{{ trade.status == 1 ? "已付款"}}{{  trade.status == 0 ? "未付款" }}{{  trade.status == 4 ? "已关闭" }}</td>
                    <td>{{ trade.createdAt |date('Y年m月d日') }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
            </div>

        </div>
    </div>

{% endblock %}