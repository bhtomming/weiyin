{% extends 'base.html.twig' %}
{% block body %}
    会员个人中心
    <div class="row">会员姓名: {{ member.username }}</div>
    <div class="row">邮箱: {{ member.email }}</div>
    <div class="row">手机号: {{ member.phone }}</div>
    <div class="row">我的订单: </div>
    <ul>
        {% for trade in trades %}
            <li class=""><a href="{{ path('view_trade',{'id': trade.id}) }}" >{{ trade.tradeNo }}</a></li>
            <li class="">{{ trade.createdAt |date('Y年m月d日') }}</li>
            <li class="">{{ trade.status }}</li>
        {% endfor %}
    </ul>
{% endblock %}