{% extends 'base.html.twig' %}
{% block body %}
        <h2>订单号:{{ trade.tradeNo }}</h2>
        {% for single_strade in trade.goodsDetail %}
            {%  set product = single_strade.product %}
            <h2>{{ product.title }}</h2>
            <p>型号:{{ product.model }}</p>
            价格:{{ product.price }}<br/>
            数量: {{ single_strade.number }}
            金额:{{ single_strade.amount }}<br/>
        {% endfor %}
        总金额:{{ trade.totalAmount }}<br/>
    {% if trade.status == 0 %}
        <a class="btn btn-warning" href="{{ path('pay',{'id':trade.id}) }}">现在付款</a>
    {% endif %}
{% endblock %}