<input id="reduce-{{ id }}" type="button" class="btn reduce" name="reduce" data-id="{{ id }}"  value="-"/>
<input id="num-{{ id }}" type="text" name="number" class="number num-{{ id }}" value="{{ num }}" size="2" data-id="{{ id }}"/>
<input id="add-{{ id }}" type="button" class="btn add" name="add" data-id="{{ id }}"  value="+"/>
